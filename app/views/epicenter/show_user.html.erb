<h1>@<%= @user.username %>'s Profile & Tweets</h1>



<div class="row">

  <div class="col-md-3">
    <div class="well">
      <p>
        <% unless @user == current_user %>
          <% if current_user.following.include?(@user.id) %>
            <%= link_to 'Unfollow', unfollow_path(id: @user.id), class: 'btn btn-primary' %>
          <% else %>
            <%= link_to 'Follow', now_following_path(id: @user.id), class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      </p>
      <!-- ADD AVATAR HERE -->
      <p><%= @user.username %> | <%= @user.name %></p>
      <p><%= @user.location %></p>
      <p><%= @user.bio %></p>
      <p>

      </p>
    </div>
  </div>

  <div class="col-md-6">
    <% @user.tweets.each do |tweet| %>
      <%= render tweet %>
      <!-- <div class="well">
        <p>@<%= tweet.user.username %></p>
        <p><%= tweet.message %></p>
      </div> -->
    <% end %>
  </div>

  <div class="col-md-3">

  </div>

</div>
